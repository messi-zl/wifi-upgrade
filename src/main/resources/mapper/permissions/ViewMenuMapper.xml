<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sim.wifi.upgrade.modules.permissions.mapper.ViewMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.sim.wifi.upgrade.modules.permissions.model.ViewMenu">
        <id column="id" property="id" />
        <result column="name" property="name" />
    </resultMap>

    <select id="getMenuListByUserId" resultType="com.sim.wifi.upgrade.modules.permissions.model.ViewMenu">
        SELECT
            m.id id,
            m.name name
        FROM
            user_role arr
                LEFT JOIN role r ON arr.role_id = r.id
                LEFT JOIN role_menu rmr ON r.id = rmr.role_id
                LEFT JOIN view_menu m ON rmr.menu_id = m.id
        WHERE
            arr.user_id = #{userId}
          AND m.id IS NOT NULL
        GROUP BY
            m.id
    </select>
</mapper>
